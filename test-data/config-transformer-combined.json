{
  "job": {
    "setting": {
      "speed": {
        "channel": 2
      },
      "errorLimit": {
        "record": 10,
        "percentage": 5
      }
    },
    "content": [
      {
        "reader": {
          "name": "postgresqlreader",
          "parameter": {
            "username": "postgres",
            "password": "postgres",
            "column": ["id", "name", "email"],
            "connection": [
              {
                "jdbcUrl": ["jdbc:postgresql://localhost:5432/llm_datasets"],
                "table": ["users"]
              }
            ]
          }
        },
        "transformer": [
          {
            "name": "dx_replace",
            "parameter": {
              "columnIndex": 1,
              "paras": ["test_user", "USER"]
            }
          },
          {
            "name": "dx_substr",
            "parameter": {
              "columnIndex": 2,
              "paras": ["0", "10"]
            }
          },
          {
            "name": "dx_filter",
            "parameter": {
              "columnIndex": 0,
              "paras": [">", "5"]
            }
          }
        ],
        "writer": {
          "name": "postgresqlwriter",
          "parameter": {
            "username": "postgres",
            "password": "postgres",
            "column": ["id", "name_transformed", "email_substr"],
            "connection": [
              {
                "jdbcUrl": "jdbc:postgresql://localhost:5432/datax",
                "table": ["transformer_combined_test"]
              }
            ],
            "preSql": [
              "DROP TABLE IF EXISTS transformer_combined_test",
              "CREATE TABLE transformer_combined_test (id INTEGER PRIMARY KEY, name_transformed VARCHAR(255), email_substr VARCHAR(255))"
            ]
          }
        }
      }
    ]
  }
}