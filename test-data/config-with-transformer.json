{
  "job": {
    "setting": {
      "speed": {
        "channel": 2
      },
      "errorLimit": {
        "record": 10,
        "percentage": 5
      }
    },
    "content": [
      {
        "reader": {
          "name": "postgresqlreader",
          "parameter": {
            "username": "postgres",
            "password": "postgres",
            "column": ["id", "name", "age", "email", "created_at"],
            "connection": [
              {
                "jdbcUrl": ["jdbc:postgresql://localhost:5432/llm_datasets"],
                "table": ["users"]
              }
            ]
          }
        },
        "writer": {
          "name": "postgresqlwriter",
          "parameter": {
            "username": "postgres",
            "password": "postgres",
            "column": ["id", "name", "age", "email", "created_at"],
            "connection": [
              {
                "jdbcUrl": "jdbc:postgresql://localhost:5432/datax",
                "table": ["users_transformed"]
              }
            ],
            "preSql": [
              "DROP TABLE IF EXISTS users_transformed",
              "CREATE TABLE users_transformed (id SERIAL PRIMARY KEY, name VARCHAR(255), age INTEGER, email VARCHAR(255), created_at TIMESTAMP)"
            ]
          }
        },
        "transformer": [
          {
            "name": "dx_substr",
            "parameter": {
              "columnIndex": 1,
              "paras": ["0", "5"]
            }
          },
          {
            "name": "dx_filter",
            "parameter": {
              "columnIndex": 2,
              "paras": [">", "20"]
            }
          },
          {
            "name": "dx_replace",
            "parameter": {
              "columnIndex": 3,
              "paras": ["@", "_at_"]
            }
          },
          {
            "name": "dx_pad",
            "parameter": {
              "columnIndex": 1,
              "paras": ["right", "10", "*"]
            }
          }
        ]
      }
    ]
  }
}