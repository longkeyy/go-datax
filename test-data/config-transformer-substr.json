{
  "job": {
    "setting": {
      "speed": {
        "channel": 1
      }
    },
    "content": [
      {
        "reader": {
          "name": "postgresqlreader",
          "parameter": {
            "username": "postgres",
            "password": "postgres",
            "column": ["id", "messages"],
            "connection": [
              {
                "jdbcUrl": ["jdbc:postgresql://localhost:5432/llm_datasets"],
                "table": ["causallm"]
              }
            ],
            "where": "length(messages::text) > 50"
          }
        },
        "transformer": [
          {
            "name": "dx_substr",
            "parameter": {
              "columnIndex": 1,
              "paras": ["0", "100"]
            }
          }
        ],
        "writer": {
          "name": "postgresqlwriter",
          "parameter": {
            "username": "postgres",
            "password": "postgres",
            "column": ["id", "messages_substr"],
            "connection": [
              {
                "jdbcUrl": "jdbc:postgresql://localhost:5432/datax",
                "table": ["transformer_substr_test"]
              }
            ],
            "preSql": [
              "DROP TABLE IF EXISTS transformer_substr_test",
              "CREATE TABLE transformer_substr_test (id VARCHAR(32) PRIMARY KEY, messages_substr TEXT)"
            ]
          }
        }
      }
    ]
  }
}