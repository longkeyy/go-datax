{
  "job": {
    "setting": {
      "speed": {
        "channel": 1
      }
    },
    "content": [
      {
        "reader": {
          "name": "ftpreader",
          "parameter": {
            "protocol": "ftp",
            "host": "ftp.example.com",
            "port": 21,
            "username": "testuser",
            "password": "testpass",
            "timeout": 30000,
            "connectPattern": "PASV",
            "path": ["/data/input/*.txt"],
            "maxTraversalLevel": 10,
            "column": [
              {
                "index": 0,
                "type": "string"
              },
              {
                "index": 1,
                "type": "string"
              }
            ],
            "fieldDelimiter": ",",
            "encoding": "UTF-8",
            "skipHeader": false,
            "nullFormat": "\\N"
          }
        },
        "writer": {
          "name": "ftpwriter",
          "parameter": {
            "protocol": "ftp",
            "host": "ftp.example.com",
            "port": 21,
            "username": "testuser",
            "password": "testpass",
            "timeout": 30000,
            "path": "/data/output",
            "fileName": "output",
            "writeMode": "truncate",
            "fieldDelimiter": ",",
            "encoding": "UTF-8",
            "nullFormat": "\\N",
            "header": ["col1", "col2"]
          }
        }
      }
    ]
  }
}